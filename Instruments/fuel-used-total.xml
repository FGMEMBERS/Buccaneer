<?xml version="1.0"?>

<!-- fuel used-->

<PropertyList>

	<path>fuel-used-total.ac</path>


	<!-- Digits -->
	<animation>
		<type>textranslate</type>
		<object-name>digit</object-name>
		<property>consumables/fuel/total-used-lbs</property>
		<factor>0.1</factor>
		<step>1</step>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>digit-tens</object-name>
		<property>consumables/fuel/total-used-lbs</property>
		<factor>0.01</factor>
		<step>10</step>
		<scroll>1</scroll>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>digit-hundreds</object-name>
		<property>consumables/fuel/total-used-lbs</property>
		<factor>0.001</factor>
		<step>100</step>
		<scroll>1</scroll>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>digit-thousands</object-name>
		<property>consumables/fuel/total-used-lbs</property>
		<factor>0.0001</factor>
		<step>1000</step>
		<scroll>1</scroll>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>digit-tenthousands</object-name>
		<property>consumables/fuel/total-used-lbs</property>
		<factor>0.00001</factor>
		<step>10000</step>
		<scroll>1</scroll>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>

	<!-- Panel Lighting -->
	<animation>
		<type>material</type>
		<object-name>panel-lighting-group</object-name>
		<emission>
			<factor-prop>systems/electrical/outputs/panel-floodlighting</factor-prop>
			<red>0.03125</red>
			<green>0.0089</green>
			<blue>0.0089</blue>
		</emission>
	</animation>

	<animation>
		<type>material</type>
		<object-name>lighting-group</object-name>
		<emission>
			<factor-prop>systems/electrical/outputs/instrument-lighting</factor-prop>
			<red>0.03125</red>
			<green>0.0089</green>
			<blue>0.0089</blue>
		</emission>
	</animation>

	<!-- *** LoD *** -->
	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>5</max-m>
	</animation>
</PropertyList>
