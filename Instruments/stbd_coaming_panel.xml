	<!-- Rain Clear -->

	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
		<object-name>light-rain-clr</object-name>
	</effect>

	<animation>
		<type>select</type>
		<object-name>lamp-rain-clr</object-name>
		<condition>
			<property>sim/model/buccaneer/controls/light-rain-clear</property>
			<greater-than>
				<property>systems/electrical/outputs/radar</property>
				<value>23</value>
			</greater-than>
		</condition>
	</animation>

	<animation>
		<type>material</type>
		<object-name>light-rain-clr</object-name>
		<condition>
				<greater-than>
					<property>systems/electrical/outputs/radar</property>
					<value>23</value>
				</greater-than>
		</condition>
		<emission>
			<factor-prop>sim/model/buccaneer/controls/light-rain-clear</factor-prop>
			<offset-prop>systems/electrical/outputs/panel-floodlighting</offset-prop>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
		</emission>
		<transparency>
			<alpha-prop>sim/model/buccaneer/controls/light-rain-clear</alpha-prop>
			<factor>-1.0</factor>
			<offset>1</offset>
			<max>0.95</max>
			<min>0.75</min>
		</transparency>
	</animation>


	<animation>
		<type>pick</type>
		<object-name>light-rain-clr</object-name>
		<visible>true</visible>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-assign</command>
				<property>sim/model/buccaneer/controls/light-rain-clear</property>
				<value type="double">1</value>
			</binding>
			<mod-up>
				<binding>
					<command>property-assign</command>
					<property>sim/model/buccaneer/controls/light-rain-clear</property>
					<value type="double">0</value>
				</binding>
			</mod-up>
		</action>
	</animation>

