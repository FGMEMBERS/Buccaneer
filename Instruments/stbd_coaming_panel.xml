	<!-- Instinctive Cut Out -->

	<animation>
		<type>translate</type>
		<object-name>ButtonICO</object-name>
		<property>sim/model/buccaneer/controls/button-ico</property>
		<factor>0.005</factor>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>ButtonICO</object-name>
		<visible>true</visible>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-assign</command>
				<property>controls/autoflight/autopilot/ico</property>
				<value type="bool">0</value>
			</binding>
			<binding>
				<command>property-assign</command>
				<property>sim/model/buccaneer/controls/button-ico</property>
				<value type="int">1</value>
			</binding>
