<?xml version="1.0"?>

<!-- Control Column -->

<PropertyList>

	<path>stick.ac</path>

	<animation>
		<type>rotate</type>
		<object-name>main_moving_parts</object-name>
		<property>controls/flight/aileron</property>
		<factor>35</factor>
		<center>
			<x-m>3.57185</x-m>
			<y-m>-0.0536737</y-m>
			<z-m>0.365299</z-m>
		</center> 
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>translate</type>
		<object-name>main_moving_parts</object-name>
		<property>controls/flight/elevator</property>
		<factor>0.05</factor>
		<center>
			<x-m>3.57185</x-m>
			<y-m>-0.0536737</y-m>
			<z-m>0.365299</z-m>
		</center> 
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<effect>
		<inherits-from>Aircraft/Buccaneer/Models/Effects/buccaneerreflect-uber</inherits-from>
		<parameters>
			<reflection-fresnel type="float">0.1</reflection-fresnel>
			<reflection-rainbow type="float">0.05</reflection-rainbow>
			<reflection-noise type="float">0.1</reflection-noise>
			<ambient-correction type="float">0.1</ambient-correction>
			<reflection-correction type="float">0.2</reflection-correction>
		</parameters>
		<object-name>control_column_shaft</object-name>
	</effect>

	<effect>
		<inherits-from>Aircraft/Buccaneer/Models/Effects/buccaneerreflect-uber</inherits-from>
		<parameters>
			<reflection-fresnel type="float">0.2</reflection-fresnel>
			<reflection-rainbow type="float">0.05</reflection-rainbow>
			<reflection-noise type="float">0.2</reflection-noise>
			<ambient-correction type="float">0.0</ambient-correction>
			<reflection-correction type="float">0.0</reflection-correction>
		</parameters>
		<object-name>plastic.png</object-name>
	</effect>


