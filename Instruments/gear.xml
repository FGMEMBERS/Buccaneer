	<!-- Day / Night knob -->

	<animation>
		<type>pick</type>
		<object-name>knob_night_day</object-name>
		<visible>true</visible>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-toggle</command>
				<property>controls/switches/gear/lamps</property>
			</binding>
		</action>
	</animation>

	<animation>
		<type>translate</type>
		<object-name>knob_night_day</object-name>
		<property>controls/switches/gear/lamps</property>
		<factor>0.001</factor>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>knob_night_day</object-name>
		<property>controls/switches/gear/dayNight</property>
		<factor>90</factor>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

