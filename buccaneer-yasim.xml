				capacity="1585"/>

	<!-- tank #6 -->		0
	<tank x="-10.599"
				y="0"
				z="0.62787"
				jet="true"
				capacity="1594"/>

	<!-- tank #7 -->
	<tank x="-11.3574"
				y="0"
				z="0.73467"
				jet="true"
				capacity="1602"/>

	<!-- tank #8 -->
	<tank x="-12.0327"
				y="0"
				z="0.737762"
				jet="true"
				capacity="1663"/>

	<!-- proportioner port -->
	<tank x="-9.125"
				y="0"
				z="0"
				jet="true"
				capacity="10"/>

	<!-- proportioner stbd -->
	<tank x="-9.125"
				y="0"
				z="0"
				jet="true"
				capacity="10"/>

	<!-- recuperator port (inside Tank #1) -->
	<tank x="-6.00247"
				y="0"
				z="0.630794"
				jet="true"
				capacity="63"/>

	<!-- recuperator stbd (inside Tank #1)-->
