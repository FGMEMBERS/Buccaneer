<PropertyList>
	<sim include="help-obs.xml">
		<description type="string" >Blackburn Buccaneer S2(Observer)</description>
		<author type="string">Vivian Meazza, Anders Gidenstam</author>
		<status type="string">alpha</status>
		<aircraft-version>0.1</aircraft-version>

		<flight-model>null</flight-model>

		<model>
			<path>Aircraft/Buccaneer/Models/buccaneer-obs-model.xml</path>
		</model>

		<presets>
			<onground>true</onground>
		</presets>

		<systems>
			<electrical>
				<path/>
			</electrical>
		</systems>
		<sound>
			<path>Aircraft/Buccaneer/Sounds/buccaneer-sound.xml</path>
		</sound>

		<view n="0">
			<name>Back Seat View</name>
			<internal archive="y">true</internal>
			<config>
				<from-model type="bool">false</from-model>
				<from-model-idx type="int">0</from-model-idx>
				<eye-lat-deg-path>/position/latitude-deg</eye-lat-deg-path>
				<eye-lon-deg-path>/position/longitude-deg</eye-lon-deg-path>
				<eye-alt-ft-path>/position/altitude-ft</eye-alt-ft-path>
				<eye-heading-deg-path>/orientation/heading-deg</eye-heading-deg-path>
				<eye-pitch-deg-path>/orientation/pitch-deg</eye-pitch-deg-path>
				<eye-roll-deg-path>/orientation/roll-deg</eye-roll-deg-path>

				<ground-level-nearplane-m type="double">0.5f</ground-level-nearplane-m>
				<x-offset-m archive="y"
										type="double">0.05</x-offset-m>
				<y-offset-m archive="y"
										type="double">1.30165</y-offset-m>
				<z-offset-m archive="y"
										type="double">5.2269</z-offset-m>
				<pitch-offset-deg>-15</pitch-offset-deg>
				<default-field-of-view-deg>60</default-field-of-view-deg>
				<dynamic-view type="bool">true</dynamic-view>
			</config>
		</view>
		<view n="1">
			<config>
				<target-z-offset-m archive="y"
													 type="double">8.5</target-z-offset-m>
			</config>
		</view>
		<view n="2">
			<config>
				<target-z-offset-m archive="y"
													 type="double">8.5</target-z-offset-m>
			</config>
		</view>
		<view n="3">
			<config>
				<target-z-offset-m archive="y"
													 type="double">8.5</target-z-offset-m>
			</config>
		</view>
		<view n="4">
			<config>
				<target-z-offset-m archive="y"
													 type="double">7</target-z-offset-m>
			</config>
		</view>
		<view n="5">
			<config>
				<target-z-offset-m archive="y"
													 type="double">7</target-z-offset-m>
			</config>
		</view>
		<view n="6">
			<config>
				<target-z-offset-m archive="y"
													 type="double">7</target-z-offset-m>
			</config>
		</view>
		<view n="101">
			<name>Gun Camera View</name>
			<type>lookfrom</type>
			<internal archive="y">true</internal>
			<config>
				<from-model type="bool">true</from-model>
				<from-model-idx type="int">0</from-model-idx>
				<ground-level-nearplane-m type="double">0.01f</ground-level-nearplane-m>
				<default-field-of-view-deg type="double">30</default-field-of-view-deg>
				<pitch-offset-deg>-15</pitch-offset-deg>
				<x-offset-m archive="y">0.0</x-offset-m>
				<!--Right-->
				<y-offset-m archive="y">-0.531504</y-offset-m>
				<!--Up-->
				<z-offset-m archive="y">1.92197</z-offset-m>
				<!--Back-->
			</config>
		</view>
		<viewer>
			<eye>
				<latitude-deg type="double">0</latitude-deg>
				<longitude-deg type="double">0</longitude-deg>
				<altitude-ft type="double">0</altitude-ft>
				<heading-deg type="double">0</heading-deg>
				<pitch-deg type="double">0</pitch-deg>
				<roll-deg type="double">0</roll-deg>
			</eye>
			<target>
				<latitude-deg type="double">0</latitude-deg>
				<longitude-deg type="double">0</longitude-deg>
				<altitude-ft type="double">0</altitude-ft>
				<heading-deg type="double">0</heading-deg>
				<pitch-deg type="double">0</pitch-deg>
				<roll-deg type="double">0</roll-deg>
			</target>
		</viewer>

		<headshake>
			<enabled type="bool">1</enabled>
		</headshake>

		<remote>
			<pilot-callsign type="string">G-VMM</pilot-callsign>
			<connected type="bool">false</connected>
		</remote>

		<menubar>
			<default>
				<menu n="1000">
					<label>Buccaneer</label>
					<enabled type="bool">true</enabled>
					<item>
						<label>Select MP-pilot</label>
						<binding>
							<command>nasal</command>
							<script>dual_control_tools.copilot_dialog.show(aircraft_dual_control.pilot_type)</script>
						</binding>
					</item>
					<item>
						<label>Toggle pilot model</label>
						<binding>
							<command>property-toggle</command>
							<property>/sim/model/buccaneer/config/show-pilot</property>
						</binding>
					</item>
					<item>
						<label>Toggle G-induced head movement</label>
						<binding>
							<command>property-toggle</command>
							<property>/sim/headshake/enabled</property>
						</binding>
					</item>
				</menu>
			</default>
		</menubar>
	</sim>

	<accelerations>
		<pilot-g-damped type="double">1</pilot-g-damped>
	</accelerations>

	<engines>
		<engine n="0">
			<running type="bool">false</running>
		</engine>
		<engine n="1">
			<running type="bool">false</running>
		</engine>
	</engines>


	<input>
		<keyboard>
			<key n="22">
				<name>Ctrl-V</name>
				<desc>Select initial view ("Back Seat View").</desc>
				<binding>
					<command>nasal</command>
					<script>
						setprop("/sim/current-view/view-number", view.indexof("Back Seat View"));
					</script>
				</binding>
			</key>

			<!-- map keys for seat vertical adjust -->
			<key n="21">
				<name>CTRL-U</name>
				<desc>Seat Default.</desc>
				<binding>
					<command>property-assign</command>
					<property>/controls/seat/vertical-adjust</property>
					<value type="double">0</value>
				</binding>
				<binding>
					<condition>
						<equals>
							<property>/sim/current-view/name</property>
							<value>Back Seat View</value>
						</equals>
					</condition>
					<command>property-assign</command>
					<property>sim/current-view/y-offset-m</property>
					<value type="double">1.30165</value>
				</binding>
			</key>
			<key n="85">
				<name>U</name>
				<desc>Seat Down.</desc>
				<binding>
					<command>property-adjust</command>
					<property>/controls/seat/vertical-adjust</property>
					<step type="double">-0.01</step>
					<min type="double">-0.05</min>
					<max type="double">0.05</max>
				</binding>
				<binding>
					<condition>
						<equals>
							<property>/sim/current-view/name</property>
							<value>Back Seat View</value>
						</equals>
					</condition>
					<command>property-adjust</command>
					<property>sim/current-view/y-offset-m</property>
					<step type="double">-0.01</step>
					<min type="double">1.25165</min>
					<max type="double">1.35165</max>
				</binding>
			</key>
			<key n="117">
				<name>u</name>
				<desc>Seat Up.</desc>
				<binding>
					<command>property-adjust</command>
					<property>controls/seat/vertical-adjust</property>
					<step type="double">0.01</step>
					<min type="double">-0.05</min>
					<max type="double">0.05</max>
				</binding>
				<binding>
					<condition>
						<equals>
							<property>/sim/current-view/name</property>
							<value>Back Seat View</value>
						</equals>
					</condition>
					<command>property-adjust</command>
					<property>sim/current-view/y-offset-m</property>
					<step type="double">0.01</step>
					<min type="double">1.25165</min>
					<max type="double">1.35165</max>
				</binding>
			</key>
		</keyboard>
	</input>

	<!-- nasal stuff -->
	<nasal>
		<buccaneer>
			<file>Aircraft/Buccaneer/Nasal/buccaneer-obs-utils.nas</file>
		</buccaneer>
		<dual_control_tools>
			<file>Aircraft/Generic/DualControl/dual-control-tools.nas</file>
		</dual_control_tools>
		<aircraft_dual_control>
			<file>Aircraft/Buccaneer/Nasal/buccaneer-dual-control.nas</file>
		</aircraft_dual_control>
		<dual_control>
			<file>Aircraft/Generic/DualControl/copilot-dual-control.nas</file>
		</dual_control>
	</nasal>

	<environment>
		<params>
			<contrail-altitude type="double">50000</contrail-altitude>
		</params>
	</environment>


</PropertyList>
